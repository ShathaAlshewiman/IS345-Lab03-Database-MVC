@model WebApplication3.Models.client

<h1>registration</h1>
<h4>customer</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="registration">
            <div class="form-group">Name<input asp-for="name" class="form-control"></input></div>
            <div class="form-group">Age<input asp-for="age" class="form-control"></input></div>
            Job: <select class="form-control" asp-for="job">
                <option value="HighSchool">teacher</option>
                <option value="University">doctor</option>
                <option value="University">engineer</option>
            </select>
            <div class="form-group">
                <div class="checkbox">
                    <label><input type="radio" asp-for="gender" value="male">Male</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" asp-for="gender" value="female">Female</label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input asp-for="married">Married</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-outline-success">
                @ViewData["Message"]
            </div>
        </form>
    </div>
</div>